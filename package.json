{
  "name": "nice-store",
  "description": "lite & flexible & extensible state management for react",
  "version": "0.0.2-10",
  "author": "frontlich",
  "keywords": [
    "state management",
    "react",
    "state",
    "react-state",
    "store",
    "enhancer",
    "lite",
    "fast",
    "extensible",
    "redux",
    "nice-store"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/nice-store.esm.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/nice-store.esm.js",
      "require": "./dist/index.js",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./enhancers": {
      "types": "./dist/enhancers/index.d.ts",
      "import": "./dist/enhancers/index.esm.js",
      "require": "./dist/enhancers/index.cjs.js",
      "node": "./dist/enhancers/.index.cjs.js",
      "default": "./dist/enhancers/index.cjs.js"
    }
  },
  "files": [
    "dist",
    "enhancers",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && node ./build-enhancers.mjs",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "lint": "tsdx lint",
    "prepublishOnly": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "doc": "docsify serve ./docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frontlich/nice-store.git"
  },
  "bugs": {
    "url": "https://github.com/frontlich/nice-store/issues"
  },
  "homepage": "https://frontlich.github.io/nice-store/#/",
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/nice-store.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/nice-store.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.0.5",
    "@types/react": "^18.0.15",
    "@types/use-sync-external-store": "^0.0.3",
    "ahooks": "^3.7.0",
    "docsify-cli": "^4.4.4",
    "esbuild": "^0.15.3",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "react-dom": "^18.2.0",
    "rxjs": "^7.5.6",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "react": ">=16.8",
    "use-sync-external-store": "^1.2.0"
  },
  "peerDependencies": {
    "ahooks": ">=3",
    "rxjs": ">=6"
  },
  "peerDependenciesMeta": {
    "ahooks": {
      "optional": true
    },
    "rxjs": {
      "optional": true
    }
  }
}
